<search>:
    name: 'search'
    FloatLayout:
        size_hint: None, None
        Image:
            source: "TRIPME.png"
            x: (root.width * .5)-100
            y: root.height * .8
            size_hint_x: 2
            allow_stretch: True

            TextInput:
                id: location_search
                multiline:False
                width: 325
                height: 30
                x: (root.width * .5) - 188
                y: (root.height * 0.7)
                background_color: 1, 1, 1, .3
                hint_text_color: 1, 1, 1, .5
                hint_text: "Peru"
                foreground_color: 1, 1, 1, 1

            Button:
                id: search_now
                text: "Search"
                x: (root.width * .5)+138
                y: root.height * 0.7
                size: 50, 30
                size_hint: None, None
                color: 1, 1, 1, 1
                bold: True
                background_color: 3, 1, 1, 1
                on_press: root.searchNow()