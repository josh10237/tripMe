<one>:
    name: 'one'
    FloatLayout:
        size_hint: None, None
        Image:
            source: "TRIPME.png"
            x: (root.width * .5)-100
            y: root.height * .8
            size_hint_x: 2
            allow_stretch: True

            Label:
                text: "Name: "
                x: (root.width * .5)-190
                y: root.height * 0.6
                bold: True

            TextInput:
                id: name
                multiline:False
                width: 300
                height: 30
                x: (root.width * .5) - 110
                y: (root.height * 0.6) + 35
                background_color: 1, 1, 1, .3
                hint_text_color: 1, 1, 1, .5
                hint_text: "John Smith"
                foreground_color: 1, 1, 1, 1

            Label:
                text: "Email: "
                x: (root.width * .5)-190
                y: root.height * 0.5
                bold: True

            TextInput:
                id: email
                multiline:False
                width: 300
                height: 30
                x: (root.width * .5) - 110
                y: (root.height * 0.5) + 35
                background_color: 1, 1, 1, .3
                hint_text_color: 1, 1, 1, .5
                hint_text: "johnsmith@gmail.com"
                foreground_color: 1, 1, 1, 1


            Label:
                text: "Age: "
                x: (root.width * .5)-190
                y: root.height * 0.4
                bold: True

            TextInput:
                id: age
                multiline:False
                width: 300
                height: 30
                x: (root.width * .5) - 110
                y: (root.height * 0.4) + 35
                background_color: 1, 1, 1, .3
                hint_text_color: 1, 1, 1, .5
                hint_text: "25"
                foreground_color: 1, 1, 1, 1

            Label:
                text: "Gender: "
                x: (root.width * .5)-190
                y: root.height * 0.3
                bold: True

            TextInput:
                id: gender
                multiline:False
                width: 300
                height: 30
                x: (root.width * .5) - 110
                y: (root.height * 0.3) + 35
                background_color: 1, 1, 1, .3
                hint_text_color: 1, 1, 1, .5
                hint_text: "Male"
                foreground_color: 1, 1, 1, 1


        Button:
            id: submit_email
            text: "Submit"
            x: (root.width * .5)-150
            y: root.height * 0.1
            size: 300, 70
            size_hint: None, None
            color: 1, 1, 1, 1
            bold: True
            background_color: 3, 1, 1, 1
            on_press: root.submitEmail()

        Button:
            id: why_do_we_ask
            text: "Why do we ask this information?"
            font_size: 10
            x: (root.width * .95)-120
            y: root.height * 0.05 - 25
            size: 150, 25
            size_hint: None, None
            color: 1, 1, 1, 1
            bold: True
            background_color: 0, .6, .6, 0
            on_press: root.whyDoWeAsk()




